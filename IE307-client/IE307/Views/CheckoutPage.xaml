<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IE307.Views.CheckoutPage"
             Shell.TabBarIsVisible="False"
             Title="Thanh toán">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="#fafafa">
                <StackLayout>
                    <Frame HasShadow="False"
                           BackgroundColor="white">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <Label FontAttributes="Bold"
                                   FontSize="20"
                                   HorizontalOptions="StartAndExpand"
                                   Text="Thông tin nhận hàng"
                                   TextColor="#002d5c"
                                   VerticalTextAlignment="Center"
                                   Grid.Row="0">
                            </Label>
                            <Grid Grid.Row="1"
                                  RowDefinitions="Auto"
                                  ColumnDefinitions="*, 2*">
                                <Label TextColor="Black"
                                       Opacity="0.7"
                                       Text="Tên người nhận:"
                                       FontSize="16" 
                                       Grid.Column="0"
                                       Grid.Row="0"
                                       VerticalOptions="Center"/>
                                <Entry Grid.Row="0"
                                       Grid.Column="1"
                                       x:Name="ent_Receiver"></Entry>
                            </Grid>
                            <Grid Grid.Row="2"
                                  ColumnDefinitions="*, 2*">
                                <Label TextColor="Black"
                                       Opacity="0.7"
                                       Text="Số điện thoại:"
                                       FontSize="16"
                                       Grid.Column="0"
                                       Grid.Row="0"
                                       VerticalOptions="Center" />
                                <Entry Grid.Column="1"
                                       Grid.Row="0"
                                       x:Name="ent_Phone"></Entry>
                            </Grid>
                            <Grid Grid.Row="3"
                                  ColumnDefinitions="*, 2*">
                                <Label TextColor="Black"
                                       Opacity="0.7"
                                       Text="Địa chỉ:"
                                       FontSize="16"
                                       Grid.Column="0"
                                       Grid.Row="0"
                                       VerticalOptions="Center" />
                                <Entry Grid.Column="1"
                                       Grid.Row="0"
                                       x:Name="ent_Address"></Entry>
                            </Grid>
                        </Grid>
                    </Frame>
                </StackLayout>

                <Frame HasShadow="False"
                       BackgroundColor="white">
                    <StackLayout HeightRequest="150">
                        <Label FontAttributes="Bold"
                               FontSize="20"
                               Text="Thông tin giỏ hàng"
                               TextColor="#002d5c">
                        </Label>
                        <CollectionView x:Name="cv_CartList">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Frame Margin="0,8,0,8"
                                               Padding="0"
                                               BackgroundColor="White"
                                               HasShadow="True">
                                            <StackLayout Orientation="Horizontal">
                                                <StackLayout Margin="0,0,15,0">
                                                    <Image Aspect="AspectFit"
                                                           HeightRequest="120"
                                                           Source="{Binding item.image}"
                                                           WidthRequest="120" />
                                                </StackLayout>
                                                <StackLayout Margin="15,0,0,0">
                                                    <Label FontSize="16"
                                                           HorizontalOptions="StartAndExpand"
                                                           Text="{Binding item.name}"
                                                           TextColor="Black">
                                                    </Label>
                                                    <Label FontSize="16"
                                                           HorizontalOptions="StartAndExpand"
                                                           Text="{Binding price, StringFormat='{0:F3} đ'}"
                                                           TextColor="#ccac00">
                                                    </Label>
                                                    <Label FontSize="16"
                                                           HorizontalOptions="StartAndExpand"
                                                           Text="{Binding quantity, StringFormat='Số lượng: {0:F0}'}">
                                                    </Label>
                                                </StackLayout>
                                            </StackLayout>
                                        </Frame>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>
                <StackLayout>
                    <Frame HasShadow="False"
                           BackgroundColor="white">
                        <StackLayout RadioButtonGroup.GroupName="PaymentMethod" >
                            <Label Text="Phương thức thanh toán"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#002d5c" />
                            <RadioButton Content="COD" CheckedChanged="RadioButton_CheckedChanged"/>
                            <RadioButton Content="Chuyển khoản" CheckedChanged="RadioButton_CheckedChanged"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <StackLayout>
                    <Frame HasShadow="False"
                           BackgroundColor="white">
                        <StackLayout Orientation="Horizontal"
                                     VerticalOptions="CenterAndExpand">
                            <StackLayout>
                                <Label Margin="30,0,35,0"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       Text="TỔNG TIỀN"
                                       TextColor="#002d5c"
                                       VerticalOptions="CenterAndExpand"
                                       VerticalTextAlignment="Center">
                                </Label>
                                <Label Margin="30,0,35,0"
                                       FontSize="18"
                                       HorizontalOptions="Center"
                                       x:Name="lb_TotalPrice"
                                       TextColor="#ccac00"
                                       VerticalOptions="CenterAndExpand"
                                       VerticalTextAlignment="Center">
                                </Label>
                            </StackLayout>
                            <Button Margin="0,0,30,0"
                                    Padding="0"
                                    Text="MUA HÀNG"
                                    WidthRequest="100"
                                    BackgroundColor="#ccac00"
                                    HorizontalOptions="EndAndExpand"
                                    VerticalOptions="CenterAndExpand"
                                    Clicked="order_Clicked">
                            </Button>
                        </StackLayout>
                    </Frame>
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>